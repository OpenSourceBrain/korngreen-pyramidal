# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation
target: KorngreenPyramidal.hoc
mep: ../../../bac.mep
engine: NEURON
experiments: 
  BAC:
    observables:
      spike times:
        file:
          path: ./results/t_v_soma.dat
          columns: [0,1]
          scaling: [1000, 1000]
          header: 2
        spike detection:
          method: threshold
          threshold: -0.015
        tolerance: 5e-4
      morphology:
        base section: A140612_nml
      temperature: ~
