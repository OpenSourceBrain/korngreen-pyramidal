<?xml version="1.0" encoding="UTF-8"?>
<channelml xmlns="http://morphml.org/channelml/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:meta="http://morphml.org/metadata/schema" xsi:schemaLocation="http://morphml.org/channelml/schema http://www.neuroml.org/NeuroMLValidator/NeuroMLFiles/Schemata/v1.8.0/Level2/ChannelML_v1.8.0.xsd" units="Physiological Units">

    <meta:notes>ChannelML file containing a single Channel description</meta:notes>

    <channel_type name="bk">
        
        <status value="stable">
            <meta:comment>Translation of bk channel from Korngreen et al.</meta:comment>
            <meta:contributor>
                <meta:name>Matteo Farinella</meta:name>
            </meta:contributor>
        </status>
        
        <meta:notes>Implementation of a BK-channel in Purkinje cells, modified from Khaliq et al., J.Neurosci. 23(2003) by Akemann and Knoepfel, J.Neurosci. 26 (2006)</meta:notes>
        
        <meta:authorList>
            <meta:modelTranslator>
                <meta:name>Padraig Gleeson</meta:name>
                <meta:institution>UCL</meta:institution>    
                <meta:email>p.gleeson - at - ucl.ac.uk</meta:email>
            </meta:modelTranslator>
	    <meta:modelTranslator>
                <meta:name>Matteo Farinella</meta:name>
                <meta:institution>UCL</meta:institution>    
                <meta:email>m.farinella - at - ucl.ac.uk</meta:email>
            </meta:modelTranslator>
        </meta:authorList>

        <meta:publication>
            <meta:fullTitle>A. L. Hodgkin and A. F. Huxley, A quantitative description of membrane current and its application
            to conduction and excitation in nerve, J. Physiol., vol. 117, pp. 500-544, 1952.</meta:fullTitle>
            <meta:pubmedRef>http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?cmd=Retrieve&amp;db=pubmed&amp;dopt=Abstract&amp;list_uids=12991237</meta:pubmedRef>
        </meta:publication>

        <meta:neuronDBref>
            <meta:modelName>K channels</meta:modelName>
            <meta:uri>http://senselab.med.yale.edu/senselab/NeuronDB/channelGene2.htm#table3</meta:uri>
        </meta:neuronDBref>
        
        <current_voltage_relation cond_law="ohmic" ion="k" default_gmax="36" default_erev="-100.0">
            
            <conc_dependence name="Calcium" ion="ca" charge="2" variable_name="ca_conc" min_conc="7.55e-7" max_conc="0.050"/>
	    
	    <q10_settings q10_factor="3" experimental_temp="22"/>  
	    
	    <offset value="5"/>
            
            <gate name="m" instances="3">
                <closed_state id="m0"/>
                <open_state id="m"/>
                     
                <time_course  name="tau" from="m0" to="m" expr_form="sigmoid"
                              rate="1" scale="-6.2" midpoint="-28.9" />			      
                <steady_state name="inf" from="m0" to="m" expr_form="generic"
                              expr="(1e3) * (0.000505 + 1/ (exp(-(v+48.5)/-5.2) + exp(-(v-54.2)/12.9) ) )" />
                    
            </gate>
	    
	    <gate name="z" instances="2">
                <closed_state id="z0"/>
                <open_state id="z"/>
                     
                <time_course  name="tau" from="z0" to="z" expr_form="generic"
                              expr="1" />			      
                <steady_state name="inf" from="z0" to="z" expr_form="generic"
                              expr="1 /(1 + 0.01/ca_conc)" />
                    
            </gate>
	    
	    <gate name="h" instances="1">
                <closed_state id="h0"/>
                <open_state id="h"/>
                     
                <time_course  name="tau" from="h0" to="h" expr_form="generic"
                              expr="(1e3) * ( 0.0019 + 1 / ( exp(-(v+48.5)/-5.2) + exp(-(v-54.2)/12.9) ) )" />			      
                <steady_state name="inf" from="h0" to="h" expr_form="generic"
                              expr="0.085 + (1-0.085) / ( 1+exp(-(v+32)/-5.8) )" />
                    
            </gate>
	    
	    
        </current_voltage_relation>
        
    </channel_type>
</channelml>